{
  "manifest_version": 2,

  "name": "TabFS Extension",
  "description": "Connects to TabFS filesystem",
  "version": "1.0",

  "permissions": ["tabs", "debugger", "nativeMessaging", "unlimitedStorage"],

  "browser_action": {},
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabfs@rsnous.com"
    }
  }
}
