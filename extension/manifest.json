{
  "manifest_version": 2,

  "name": "TabFS",
  "description": "Mount your browser tabs as a filesystem",
  "version": "1.0",

  "permissions": [
    "tabs", "tabCapture", "debugger", "nativeMessaging", "management",
    "unlimitedStorage",
    "*://*/*"
  ],

  "background": {
    "scripts": ["vendor/browser-polyfill.js", "background.js"],
    "persistent": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabfs@rsnous.com"
    }
  }
}
